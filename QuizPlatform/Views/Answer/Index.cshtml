@model IEnumerable<QuizPlatform.Models.Answer>

@{
  ViewBag.Title = "Index";
}

<h2>Answers</h2>

<p>
  @Html.ActionLink("Dodaj", "Create", new { id = ViewBag.QuestionId })
  @Html.ActionLink("Powrót", "BackToList", "Answer", new { id = ViewBag.QuestionId }, null)
</p>

<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    <th>
      @Html.DisplayNameFor(model => model.IsCorrect)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.DisplayFor(modelItem => item.IsCorrect)
      </td>
      <td>
        @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
        @Html.ActionLink("Details", "Details", new { id = item.Id }) |
        @Html.ActionLink("Delete", "Delete", new { id = item.Id })
      </td>
    </tr>
  }

</table>
