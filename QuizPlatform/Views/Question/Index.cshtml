@using QuizPlatform.Models.Domain
@model IEnumerable<QuizPlatform.Models.Question>

@{
  ViewBag.Title = "Questions";
}

<h2>Questions</h2>
<br/>
<br/>

<h3>Nazwa: @MySession.Current.QuizName</h3>
<br/>
  
<p>
  @Html.ActionLink("Create New", "Create", new { id = ViewBag.QuizId })
  @Html.ActionLink("Back to List", "Index", "Quiz", new { id = ViewBag.QuizId }, null)
</p>
<table class="table">
  <tr>
    <th>
      @Html.DisplayNameFor(model => model.Name)
    </th>
    <th></th>
  </tr>

  @foreach (var item in Model)
  {
    <tr>
      <td>
        @Html.DisplayFor(modelItem => item.Name)
      </td>
      <td>
        @Html.ActionLink("Answers", "Index", "Answer", new { id = item.Id}, null) |
        @Html.ActionLink("Edit", "Edit", new {id = item.Id}) |
        @Html.ActionLink("Details", "Details", new {id = item.Id}) |
        @Html.ActionLink("Delete", "Delete", new {id = item.Id})
      </td>
    </tr>
  }

</table>
